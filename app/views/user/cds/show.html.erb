
<%= render 'user/header' %>

<div class='container'>
	<div class="cd-detail">
		<div class="clearfix">
			<div class="clearfix">
				<%= link_to(carts_path) do %>
					<div class="cd-box3">
						<% if @cd.jacket_id.present? %>
						<%= attachment_image_tag cd, :jacket, :fill, 250, 250 %>
						<% else %>
							<%= image_tag 'no-image250.png', size: '250x250' %>
					<% end %>
					</div>
				<% end %>
				<div class="fl">
					<%= link_to(carts_path) do %>
						<div class="titile-name2"><%= @cd.name %></div>
					<% end %>
						<div class="artists-name2"><%= @cd.artist.name %></div>
					<div class="category-txt"><%= @cd.genre.name %></div>
					<div class="category-txt"><%= @cd.label.name %></div>
				</div>
				<div class="price-box">
					<p class="price3-txt"><span>価格</span>(税込)</p>
					<p class="price3"><%= @cd.price %>円</span></p>
					<%= link_to(carts_path) do %>
						<div class="cart-btn2 mb5"><i class="glyphicon glyphicon-shopping-cart color-icon-gray"></i> カートに入れる</div>
					<% end %>
					<p class="stock-txt">在庫あり<%= @cd.stock %></p>
					<p class="stock-txt2">在庫なし<%= @cd.stock %></p>
				</div>
			</div><!-- /.clearfix -->
		</div><!-- /.clearfix -->
	</div>
	<div>
		<h3 >商品紹介</h3>
		<div class="introduction-txt"></div>
		<h3>収録曲</h3>
		<div class="recording-titile-txt"><%= @cd.name %></div>
		<p class="disk-titile">ディスク 1</p>
		<ol>
			<% @cd.each do |cd| %>
				<li><%= @cd.name %></li>
			<% end %>
		</ol>
	</div>
</div><!-- /.container -->

<%= render 'user/footer' %>

