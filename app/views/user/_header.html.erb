<header>
	<div class="container">
		<div class="clearfix">
  			<div class="logo">
  				<%= image_tag("logo.png") %>
  			</div>
		    <div class="col-md-6 col-xs-6 search-box">
		    	<div class="input-group">
					<input type="text" class="form-control" placeholder="商品名やアーティスト名で検索">
					<span class="input-group-btn">
					<button type="button" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
					</span>
				</div>
		    </div>
		    <div class="col-md-2 col-xs-1 header-login-box">
		    	<%= link_to 'ログイン', 'new_user_session_path', class:'top-login' %>
		    	<%= link_to '新規登録', 'new_user_registration_path', class:'top-signin' %>
		    </div>
		    <div class="col-md-2 col-xs-1 header-icon-box">
		    	<i class="glyphicon glyphicon-user col color-icon-red"><p class="header-p"><%= link_to 'マイページ', '/users/:id_path', class:'header-p' %></p></i>
		    	<i class="glyphicon glyphicon-shopping-cart col color-icon-red"><p class="header-p"><%= link_to 'カート', '/users/:id_path', class:'header-p' %></p></i>
		    </div>
  		</div><!-- /.clearfix -->
  	</div><!-- /container -->
</header><!-- /header -->
<% if user_signed_in? %>

<% end %>