<div class="container">
  <table class="table table-bordered">
  	<h1>ユーザー情報詳細</h1>
    <thead>
      <tr>
        <th>id</th>
        <th>名前</th>
        <th>ふりがな</th>
        <th>TEL</th>
        <th>メールアドレス</th>
        <th>郵便番号</th>
        <th>住所</th>
      </tr>
    </thead>
		    <tbody>
		      <tr>
		        <th scope="row"><%= @user.id %></th>
		          <td><%= @user.name_kanji %></td>
		          <td><%= @user.name_kana %></td>
		          <td><%= @user.phone_number %></td>
		          <td><%= @user.email %></td>
              <td><%= @user.postcode %></td>
              <td><%= @user.street_address %></td>


		      </tr>
		    </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-3 col-md-offset-5">
      <%= link_to '編集', edit_admin_user_path,class: "btn btn-primary btn-lg active btncolor"%>
                    <button type="button" class="btn btn-danger btn-lg active"><%= link_to "削除", admin_users_path(@user.id),class: "btncolor", method: :delete ,"data-confirm" => "本当に削除しますか？" %></button>
                  
      <%= link_to '購入履歴', admin_user_path(1) ,class: "btn btn-primary btn-lg active btncolor"%>
    </div>
</div>