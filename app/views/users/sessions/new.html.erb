
  <%= render 'user/header' %>

<div class='container'>
  <div class="user-contein-logo"><%= image_tag("logo.png") %></div>
  <div class="login-box">
    <div class="devise-title-txt">ログイン</div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div><!-- /.container -->

  <%= render 'user/footer' %>