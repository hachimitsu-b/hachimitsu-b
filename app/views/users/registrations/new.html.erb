    <div class="login-txt">フリガナ</div>
    <input type="text" class="form-control mb15">
    <div class="login-txt">郵便番号</div>
    <input type="text" class="form-control mb15">
    <div class="login-txt">住所</div>
    <input type="text" class="form-control mb15">
    <div class="login-txt">電話番号</div>
    <input type="text" class="form-control mb15">
    <div class="login-txt">メールアドレス</div>
    <input type="text" class="form-control mb15">
    <div class="login-txt">パスワード</div>
